@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Aktif Turlar</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">En uygun fiyatlarla sunduğumuz tur listemize ve tur detaylarına aşağıdaki tablodan ulaşabilirsiniz.</p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Şehir</th>
                                    <th class="text-center">Süre</th>
                                    <th class="text-center">Kapasite</th>
                                    <th class="text-center">Fiyat</th>
                                    <th class="text-center">Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.DestinationId</td>
                                        <td class="text-center">@item.City</td>
                                        <td class="text-center">@item.DayNight</td>
                                        <td class="text-center">@item.Capacity</td>
                                        <td class="text-center">@item.Price ₺</td>
                                        <td class="text-center"><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-info">Detayları Gör</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
