@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Yap</h4>
    <p class="mb-4">
        Your email address will not be published. Required fields are marked *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">
        <input type="hidden" name="DestinationId" value="@ViewBag.destinationId" />
        <input type="hidden" name="TraversalUserId" value="@ViewBag.userId" />

        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Yorumunuzu yazabilirsiniz" required="" spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">
            <div class="form-group col-lg-6">
                <input type="text" name="Name" class="form-control" placeholder="Adınız" required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="email" name="Email" class="form-control" placeholder="Email" required="">
            </div>
        </div>
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap</button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
}
else
{
    <h2>Yorum yapabilmek için üye olmanız gereklidir!</h2>
}